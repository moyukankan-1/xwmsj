/* components/articleItem/articleItem.wxss */
.article-swiper {
  position: relative;
  background: #fff;
  font-size: 28rpx;
  height: 1374rpx;
}
.sa {
  margin-top: 90rpx;
}
.swiper-view {
  display: flex;
  border-bottom: 2rpx solid rgb(240,240,240);
  padding: 15rpx 20rpx;
}
.swiper-view view {
  flex: 1;
}
.swiper-view image {
  margin-left: 30rpx;
  width: 220rpx;
  height: 120rpx;
  border-radius: 5rpx;
}
.swiper-view view text {
  display: inline-block;
  margin-right: 20rpx;
  color: #666;
  font-size: 24rpx;
}
.swiper-view view text:first-child {
  display: block;
  margin-right: 0;
  margin-bottom: 10rpx;
  color: black;
  padding-bottom: 20rpx;
  font-size: 28rpx;
}
.scrollitem {
  position: absolute;
  top: 0;
  bottom: 0;
}
.loading {
  display: flex;
  height: 80rpx;
  justify-content: center;
}
.loading image {
  width: 80rpx;
  height: 80rpx;
}
.loading text {
  display: block;
  margin-top: 20rpx;
}
.jak,.jzk{
  white-space: nowrap;
  overflow: hidden;
  height: 88rpx;
}
.jak articlelist view,.jzk view text  {
  display: inline-block;
  margin-right: 60rpx;
}
.jak articlelist view:last-child,.jzk text:last-child {
  margin-right: 0
}
.jzk {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 2rpx solid rgb(230,230,230);
  font-size: 24rpx;
  box-sizing: border-box;
}
.jzk view text {
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 5rpx;
  background: rgb(230,230,230);
  line-height: 50rpx;
}
.scrollitem .hs {
  background: red;
  color: #fff;
}
