/* components/pop/pop.wxss */
.alert {
  opacity: 1;
}
.alert .alert-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}
.alert .alert-content {
  position: fixed;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 3px;
  overflow: hidden;
  z-index: 5000;
}
.alert .alert-content .title {
  display: inline-block;
  width: 100%;
  margin: 20rpx 0 0 0;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
}
.alert .alert-content .inputs {
  padding: 20rpx;
  background: rgb(230,230,230);
  margin: 30rpx 20rpx;
  border-radius: 10rpx;
}
.alert .alert-content .inputs textarea {
  width: 100%;
  height: 100rpx;
}
.alert .alert-content .btn-row .cancel {
  float: left;
  text-align: center;
  width: calc(50% - 2rpx);
  height: 100%;
  border-right: 1rpx solid #c0c4cc;
  padding: 20rpx 0;
  border-top: 2rpx solid #c0c4cc;
}
.alert .alert-content .btn-row .confirm {
  float: right;
  width: 50%;
  text-align: center;
  height: 100%;
  color: red;
  padding: 20rpx 0;
  border-top: 2rpx solid #c0c4cc;
}
