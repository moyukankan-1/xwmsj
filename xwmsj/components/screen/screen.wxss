/* components/screen/screen.wxss */
.screen {
  display: flex;
  justify-content: space-between
}
.screen image {
  width: 50rpx;
  height: 40rpx;
  margin-top: 7rpx;
}
.scroll {
  height: 60rpx;
  width: 100%;
}
.scroll text {
  display: inline-block;
  padding: 10rpx 15rpx;
  font-size: 24rpx;
  background: rgb(230,230,230);
  border-radius: 25rpx;
  margin-right: 10rpx;
}
.scroll text text {
  display: inline;
  padding: 0;
  font-size: 24rpx;
  border-radius: 0;
  margin-right:0;
}
