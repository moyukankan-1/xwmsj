/* pages/screenDetails/screenDetails.wxss */
.screen-details {
  padding: 20rpx;
}
.screen-details .active-state {
  margin-bottom: 30rpx;
}
.title {
  font-size: 30rpx;
  margin-bottom: 15rpx;
  font-weight: 700;
}
.type-text {
  display: inline-block;
  padding: 10rpx 20rpx;
  color: black;
  background: rgb(230,230,230);
  margin-right: 40rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-bottom: 15rpx;
}
.active {
  background: red;
  color: #fff;
}
.confirm {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: red;
}