/* pages/news/news.wxss */
.news {
  position: relative;
}
.news .news-title {
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.news-title text {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: rgb(230,230,230);
  margin-right: 20rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.news-title .active {
  background: red;
  color: #fff;
}
.news-content view {
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.news-content view text:nth-child(1) {
  display: block;
  padding-bottom: 20rpx;
}
.news-content view text:nth-child(2),.news-content view text:nth-child(3) {
  display: inline-block;
  color: #666;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.news-content view {
  position: relative;
}
.news-content view .unread {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  width: 15rpx;
  height: 15rpx;
  background: red;
  border-radius: 50%;
}
.integral-bottom {
  position: absolute;
  left: 0;
  top: 800rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 220rpx;
  height: 200rpx;
  text-align: center;
}
.integral-bottom image {
  width: 100%;
  height: 100%;
}