/**index.wxss**/
.container {
  background: rgb(240,240,240)
}
.uswiper-top {
  height: 400rpx;
}
.top-swiper {
  width: 100%;
}
.top-swiper image {
  width: 100%;
}
.uswiper-con {
  height: 400rpx;
  background: #fff;
  margin: 20rpx 0;
}
.con-swiper {
  display: flex;
  padding: 30rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.bottom {
  margin-top: 0;
}
.uswiper-con .con-swiper view {
  width: 100rpx;
  margin-right: 90rpx;
}
.uswiper-con .con-swiper view:nth-child(4) {
  margin-right: 0;
}
.uswiper-con .con-swiper view:nth-child(8) {
  margin-right: 0;
}
.uswiper-con .con-swiper view image {
  width: 100%;
  height: 100rpx;
}