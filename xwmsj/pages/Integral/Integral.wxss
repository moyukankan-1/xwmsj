/* pages/Integral/Integral.wxss */
.integral .integral-title {
  border-bottom: 2rpx solid rgb(230,230,230);
}
.integral-title view {
  display: inline-block;
  width: 50%;
  text-align: center;
  padding-top: 20rpx;
}
.integral-title .active {
  display: inline-block;
  border-bottom: 2rpx solid red;
  padding-bottom: 20rpx;
  color: red;
}
.integral-content view {
  position: relative;
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.integral-content text:nth-child(1) {
  display: block;
}
.integral-content text:nth-child(2) {
  color: #666;
  font-size: 24rpx;
}
.integral-content text:nth-child(3) {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}
.integral-bottom {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 220rpx;
  height: 200rpx;
  text-align: center;
}
.integral-bottom image {
  width: 100%;
  height: 100%;
}