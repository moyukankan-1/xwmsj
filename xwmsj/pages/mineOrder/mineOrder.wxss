/* pages/mineOrder/mineOrder.wxss */
.mine-order view {
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.mine-order view text:nth-child(1) {
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}
.mine-order view {
  position: relative;
}
.mine-order view text:nth-child(1) text {
  display: inline;
  font-size: 24rpx;
  background: red;
  color: #fff;
  border-radius: 5rpx;
}
.mine-order view text:nth-child(2) {
  color: #666;
  font-size: 24rpx;
}
.mine-order view text:nth-child(3) {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background: rgb(230,230,230);
  border-radius: 30rpx;
}
.mine-order .wait {
  background: orange;
  color: #fff;
}
.mine-order .err {
  background: red;
  color: #fff;
}
.integral-bottom {
  position: absolute;
  left: 0;
  top: 300rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 220rpx;
  height: 200rpx;
  text-align: center;
}
.integral-bottom image {
  width: 100%;
  height: 100%;
}