/* pages/myTeam/myTeam.wxss */
.my-team > view {
  position: relative;
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.my-team image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.my-team > view view {
  flex: 1;
}
.my-team > view view text:nth-child(1) {
  display: block;
  margin-bottom: 20rpx;
}
.my-team > view view text:nth-child(2),.my-team > view view text:nth-child(3){
  margin-right: 40rpx;
  color: #666;
  font-size: 24rpx;
}
.my-team > view view text:nth-child(3) {
  margin-right: 0;
}
.my-team > view > text {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: rgb(230,230,230);
  font-size: 24rpx;
}