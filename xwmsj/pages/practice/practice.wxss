/* pages/practice/practice.wxss */
.practice-title {
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.practice-title text {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: rgb(230,230,230);
  margin-right: 20rpx;
  font-size: 28rpx;
}
.practice-title .active {
  color: #fff;
  background: red;
}
.practive-content > view {
  position: relative;
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
}
.content-img {
  width: 160rpx;
  height: 140rpx;
}
.content-text {
  flex: 1;
  margin-left: 20rpx;
}
.content-text text:nth-child(1) {
  display: block;
  padding-bottom: 10rpx;
}
.content-text text:nth-child(2),.content-text text:nth-child(3) {
  display: block;
  color: #666;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.content-text image {
  position: absolute;
  top: 25rpx;
  left: 130rpx;
  width: 50rpx;
  height: 50rpx;
  color: #fff;
  border-radius: 50%;
}
