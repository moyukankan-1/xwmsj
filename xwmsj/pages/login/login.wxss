/* pages/login/login.wxss */
.login {
  padding: 0 50rpx;
  font-size: 28rpx;
  color: #666;
}
.login image {
  display: block;
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
}
.login .telephone {
  display: flex;
  border-bottom: 1px solid #666;
  margin: 100rpx 0 40rpx 0;
  padding: 10rpx;
}
.login .password {
  display: flex;
  border-bottom: 2rpx solid #666;
  padding: 10rpx;
}
.telephone label,.password label {
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.telephone label image,.password label image {
  width: 100%;
  height: 40rpx;
}
.telephone input,.password input {
  flex: 1;
  margin-left: 20rpx;
}
.login form button {
  width: 100%;
  background: red;
  color: #fff;
  margin-top: 50rpx;
  border-radius: 10rpx;
}
.footer {
  margin-top: 20rpx;
}
.footer text:first-child {
  float: left;
}
.footer text:last-child {
  color: red;
  float: right;
}

