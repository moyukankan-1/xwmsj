.rank-top {
  position: fixed;
  left: 0;
  right: 0;
  display: flex;
  height: 84rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid rgb(230,230,230);
  background: #fff;
  z-index: 999;
}
.rank-top view {
  position: relative;
  width: 50%;
}
.rank-top text {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  padding: 20rpx 0;
  
}
.active {
  border-bottom: 4rpx solid red;
  color: red;
}
.rank-content {
