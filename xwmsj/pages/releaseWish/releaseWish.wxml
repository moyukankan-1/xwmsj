<!--pages/releaseWish/releaseWish.wxml-->
<view class="release-wish">
  <form bindsubmit="_submit">
    <view class="wish-title">
      <label>标题:</label>
      <view><input placeholder="请输入标题" bindinput="_input1"></input></view>
      <label>心愿描述:</label>
      <view class="feed"><input placeholder="请描述您的心愿"  bindinput="_input2"></input></view>
    </view>
    <view class="wish-content">
      <view>
        <label>联系人:</label>
        <view><input placeholder="请输入联系人姓名" bindinput="_input3"></input></view>
      </view>
      <view>
        <label>联系电话:</label>
        <view><input placeholder="请输入联系电话" bindinput="_input4"></input></view>
      </view>
      <view>
        <label>所在地区:</label>
        <view><input placeholder="请选择所在地区" bindtap="_address" value="{{leftName}}{{rightName}}"></input></view>
      </view>
      <view>
        <label>联系地址:</label>
        <view><input placeholder="请输入联系地址" bindinput="_input5"></input></view>
      </view>
    </view>
    <button style="width: 100%; color: #fff; background: red;" form-type="submit">提交</button>
  </form>
</view>
